@model List<Album>
<table>
    <thead>
        <tr>
            <th>
                Album
            </th>
            <th>
               Title
            </th>
            <th>
               Price
            </th>
           
            <th>
                Genre
            </th>
            <th>
                Artist
            </th>
            <th>
                AlbumArtUrl
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td colspan="6">
                <div class="bulk-actions align-left">
                    <select name="dropdown">
                        <option value="option1">Choose an action...</option>
                        <option value="option2">Edit</option>
                        <option value="option3">Delete</option>
                    </select>
                    <a class="button" href="#">Apply to selected</a>
                </div>
                <div class="pagination">
                    <a href="#" title="First Page">&laquo; First</a><a href="#" title="Previous Page">
                        &laquo;
                        Previous
                    </a> <a href="#" class="number" title="1">1</a> <a href="#" class="number"
                                                                       title="2">2</a> <a href="#" class="number current" title="3">3</a> <a href="#" class="number"
                                                                                                                                             title="4">4</a> <a href="#" title="Next Page">Next &raquo;</a><a href="#" title="Last Page">
                        Last
                        &raquo;
                    </a>
                </div>
                <!-- End .pagination -->
                <div class="clear">
                </div>
            </td>
        </tr>
    </tfoot>
    <tbody>
        @foreach (Album item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Title</td>
                <td>@item.Price</td>
                <td>@item.Genre.Name</td>
                <td>@item.Artist.Name</td>
                <td>@item.AlbumArtUrl</td>
                <td>
                    <!-- Icons -->
                    <a href="javascript:void(0)" title="Sil" onclick="DeleteAlbum(@item.ID)">
                        <img src="/Areas/AdminManager/Content/resources/images/icons/cross.png" alt="Delete" />
                    </a>
                    <a href="javascript:void(0)" title="Güncelle" onclick="SendAlbum(@item.ID)">
                        <img src="/Areas/AdminManager/Content/resources/images/icons/hammer_screwdriver.png" alt="Edit Meta" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>